# ============================================
# Auvo to Vtiger Leads Integration v2.0
# ============================================
# Copie este arquivo para .env e preencha os valores

# --------------------------------------------
# CRM Configuration
# --------------------------------------------
CRM_URL=https://crm.purifikar.com.br/
CRM_USERNAME=your_crm_username
CRM_PASSWORD=your_crm_password

# --------------------------------------------
# API Configuration
# --------------------------------------------
API_BASE_URL=http://localhost:3000

# --------------------------------------------
# Database Configuration (PostgreSQL)
# --------------------------------------------
# Banco principal da aplicação (LeadRequest)
DATABASE_URL=postgresql://user:password@host:5432/API?schema=public

# Banco de integração (entity_mapping - verificação de duplicidade)
DATABASE_INTEGRATION_URL=postgresql://user:password@host:5432/integration?schema=public

# --------------------------------------------
# Auvo API Configuration
# --------------------------------------------
AUVO_API_KEY=your_auvo_api_key
AUVO_API_TOKEN=your_auvo_api_token
AUVO_API_URL=https://api.auvo.com.br/v2

# --------------------------------------------
# Google Maps Configuration
# --------------------------------------------
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# --------------------------------------------
# Email Configuration (Notificações de erro)
# --------------------------------------------
ERROR_EMAIL_TO=admin@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=email@example.com
SMTP_PASS=your_smtp_password
SMTP_SECURE=true

# --------------------------------------------
# Pilot Filter Configuration
# --------------------------------------------
# ENABLE_PILOT_FILTER: 'true' para filtrar apenas consultores piloto
# Em produção, defina como 'false' para processar todos
ENABLE_PILOT_FILTER=true

# PILOT_USER_IDS: Lista de IDs de usuários piloto separados por vírgula
# Exemplo: 213670,123456,789012
PILOT_USER_IDS=213670

# --------------------------------------------
# Geocoding Filter Configuration
# --------------------------------------------
# ENABLE_GEOCODING_FILTER: 'true' para geocoding apenas para pilotos
# Em produção, defina como 'false' para aplicar geocoding para todos
ENABLE_GEOCODING_FILTER=true
GEOCODING_USER_IDS=213670

# --------------------------------------------
# Scheduler Configuration
# --------------------------------------------
# Expressão cron para agendamento (padrão: a cada 10 minutos)
# Formato: minuto hora dia-do-mes mes dia-da-semana
SYNC_CRON_EXPRESSION=*/10 * * * *

# 'true' para executar sincronização ao iniciar o scheduler
SYNC_RUN_IMMEDIATELY=false
